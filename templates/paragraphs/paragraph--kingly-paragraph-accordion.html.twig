{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished',
] %}

{% embed "kingly_sdc:accordion" with {
  attributes: attributes.addClass(classes),
  content,
  content_attributes,
  label,
  title_attributes,
  title_prefix,
  title_suffix
} only %}
  {% block heading %}
    {{ content.field_kingly_accordion_heading }}
  {% endblock %}
  {% block content %}
    {{ content.field_kingly_accordion_content }}
  {% endblock %}
{% endembed %}
